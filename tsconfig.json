{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": ".build",
    "rootDirs": [
      "./src",
    ],
    "emitDeclarationOnly": true,
    "declaration": true
  }
}